<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>sesh | login</title>

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Google Fonts CDN -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    <!-- CSS stylesheets -->
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/login.css">
    <link rel="stylesheet" href="css/topbar.css">
    <link rel="stylesheet" href="css/sidebar.css">
</head>

<body>
    <!-- Fixed brand bar. -->
    <nav class="navbar fixed-top" style="display:flex;justify-content: center;">
        <div class="navbar-links">
            <a id="navbar-brand" style="margin-right:0px">sesh</a>
        </div>
    </nav>

    <!-- Main container for content. -->
    <div id="main-container">
        <div class="dashboard">
            <div class="dashboard-title">
                <h1>Login</h1>
            </div>
            <hr>
            <div class="dashboard-content">
                <form action="/login" method="get">
                    <h1>Username</h1>
                    <input type="text" name="username" required>
                    <h1>Password</h1>
                    <input type="password" name="password" required>
                    <button type="submit" class="login-btn">Login</button>
                </form>
                <hr>
                <p style="margin-top: 25px;"><%- message %></p>
                <div style="text-align: left;" class="alert alert-info" role="alert">
                    <p>Features to be added:</p>
                    <ul>
                        <li>Advanced insights</li>
                        <li>Individual entity views</li>
                        <li>List view</li>
                        <li>Calendar</li>
                        <li>SMS/email alerts</li>
                    </ul>
                </div>
            </div>
            <hr>
        </div>
    </div>

    <!-- JQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Popper.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- Bootstrap.js CDN -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
    </script>

    <!-- JS scripts -->
    <script src="scripts/sidebar.js"></script>
</body>

</html>