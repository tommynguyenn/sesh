<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>early access | sesh</title>

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Google Fonts CDN -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    <!-- CSS stylesheets -->
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/landing.css">

    <style>
        .mc-footer {
            bottom: 0;
            position: fixed;
            width: 100%;
        }

        form {
            margin-top: -50px;
        }

        @media only screen and (max-width: 450px) {
            body {
                text-align: center;
            }

            form {
                width: 100%;
                margin-top: 0px;
                text-align: left;
            }

            button[type="submit"] {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <!-- Main container for content. -->
    <div id="main-container">
        <!-- Fixed brand bar. -->
        <nav>
            <a class="navbar-brand" href="/">
                <span>sesh</span>app
            </a>
            <div>
                <a class="nav-item nav-link" href="/">Home</a>
                <a class="nav-item nav-link" href="/features">Features</a>
                <a class="nav-item nav-link nav-spacer" href="/login">Login</a>
                <a href="/signup">
                    <button type="button" class="btn btn-primary">
                        Request Early Access
                    </button>
                </a>
            </div>
        </nav>
        <div class="mc-intro">
            <div id="mc-intro-text">
                <h1>Sign up for our early access.</h1>
                <p>Inquire about our early access options to start your business while we start ours.</p>
            </div>
            <form action="/inquiry" method="post">
                <div class="form-group">
                    <label for="inquiryName">Name</label>
                    <input type="text" class="form-control" name="inquiryName" id="inquiryName" placeholder="J. Doe"
                        required>
                </div>
                <div class="form-group">
                    <label for="inquiryEmail">Email address</label>
                    <input type="email" class="form-control" name="inquiryEmail" id="inquiryEmail"
                        placeholder="jdoe@email.com" required>
                </div>
                <div class="form-group">
                    <label for="inquiryMessage">Message</label>
                    <textarea class="form-control" name="inquiryMessage" id="inquiryMessage" rows="3"
                        placeholder="A message" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
        <%-message%>
    </div>
    <div class="mc-footer">
        <p>Â© 2020 All rights reserved.</p>
    </div>

    <!-- JQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Popper.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- Bootstrap.js CDN -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
    </script>

    <!-- JS scripts -->
    <script src="scripts/landing.js"></script>
</body>

</html>